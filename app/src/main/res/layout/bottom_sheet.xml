<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <TextView
        android:id="@+id/areaname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"

        android:textSize="30sp"



        />

     <TextView
        android:id="@+id/areacount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
         android:textSize="30sp"
         android:layout_below="@id/areaname"

        />

    <TextView
        android:id="@+id/citycount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="30sp"
        android:layout_below="@id/areacount"


        />

    <TextView
        android:id="@+id/c"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diseases Count Area wise"
        android:textSize="20dp"
        android:layout_below="@id/citycount"


        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/c"

        android:id="@+id/bsrecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>